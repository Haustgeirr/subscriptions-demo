{
  "name": "subscription-demo",
  "version": "1.0.0",
  "description": "Demo Subscription page, made with React and NodeJS",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git://github.com/Haustgeirr/subscriptions-demo.git"
  },
  "main": "build/index.js",
  "scripts": {
    "docker": "tsc && docker-compose up -d",
    "start": "node build/index.js",
    "dev": "concurrently npm:dev:*",
    "dev:tsc": "tsc -w ",
    "dev:server": "nodemon build/index.js",
    "dev:mongo": "docker-compose up -d mongo",
    "dev:frontend": "npm run start --prefix frontend",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false tsc && npm install --prefix frontend && npm run build --prefix frontend",
    "test": "jest --config ./jest.config.json",
    "build": "tsc --build tsconfig.json"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "mongoose": "^5.11.10"
  },
  "devDependencies": {
    "nodemon": "^2.0.7",
    "@types/cors": "^2.8.9",
    "@types/express": "^4.17.9",
    "@types/jest": "^26.0.20",
    "concurrently": "^5.3.0",
    "jest": "26.6.0",
    "ts-jest": "^26.5.0",
    "typescript": "^4.1.3"
  }
}
